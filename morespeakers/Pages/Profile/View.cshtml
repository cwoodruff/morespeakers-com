@page
@model morespeakers.Pages.Profile.ViewModel
@{
    ViewData["Title"] = "Speaker Profile";
}

<div class="container py-4">
    @if (Model.ProfileUser == null)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>Profile not found.
        </div>
    }
    else
    {
        <!-- Profile Header Card -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-3 text-center mb-3 mb-md-0">
                        @if (!string.IsNullOrEmpty(Model.ProfileUser.HeadshotUrl))
                        {
                            <img src="@Model.ProfileUser.HeadshotUrl" 
                                 alt="@Model.ProfileUser.FullName" 
                                 class="speaker-avatar mx-auto" />
                        }
                        else
                        {
                            <div class="speaker-avatar mx-auto bg-light d-flex align-items-center justify-content-center">
                                <i class="bi bi-person display-4 text-muted"></i>
                            </div>
                        }
                    </div>
                    <div class="col-md-9">
                        <div class="d-flex align-items-start justify-content-between flex-wrap">
                            <div class="flex-grow-1">
                                <h1 class="mb-2">@Model.ProfileUser.FullName</h1>
                                <div class="mb-3">
                                    <span class="badge @(Model.ProfileUser.IsNewSpeaker ? "bg-primary" : "bg-success") fs-6 px-3 py-2">
                                        <i class="bi @(Model.ProfileUser.IsNewSpeaker ? "bi-person-plus" : "bi-award") me-2"></i>
                                        @(Model.ProfileUser.IsNewSpeaker ? "New Speaker" : "Experienced Speaker")
                                    </span>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.ProfileUser.Bio))
                                {
                                    <p class="lead text-muted mb-0">@Model.ProfileUser.Bio</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Expertise and Links Row -->
        <div class="row">
            @if (Model.UserExpertise?.Any() == true)
            {
                <div class="col-md-@(Model.SocialMedia?.Any() == true ? "6" : "12") mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-gear-fill me-2"></i>
                                Expertise Areas
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var ue in Model.UserExpertise)
                                {
                                    <span class="expertise-tag">@ue.Expertise.Name</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model.SocialMedia?.Any() == true)
            {
                <div class="col-md-@(Model.UserExpertise?.Any() == true ? "6" : "12") mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-link-45deg me-2"></i>
                                Social Links
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="social-links">
                                @foreach (var link in Model.SocialMedia)
                                {
                                    <a href="@link.Url" target="_blank" class="social-link">
                                        <i class="bi bi-link-45deg"></i>
                                        @link.Platform
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.UserExpertise?.Any() != true && Model.SocialMedia?.Any() != true)
        {
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="bi bi-info-circle display-4 text-muted mb-3"></i>
                    <h5 class="text-muted">Profile Information</h5>
                    <p class="text-muted mb-0">This speaker hasn't added expertise areas or social links yet.</p>
                </div>
            </div>
        }
    }
</div>
