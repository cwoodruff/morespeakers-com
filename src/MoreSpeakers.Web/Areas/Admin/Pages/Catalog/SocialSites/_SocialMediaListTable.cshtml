@model IEnumerable<MoreSpeakers.Domain.Models.SocialMediaSite>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div id="social-sites-container">
  <div class="table-responsive">
    <table class="table table-striped align-middle">
      <thead>
        <tr>
          <th style="width: 32px"></th>
          <th>Name</th>
          <th>Icon</th>
          <th>Url Format</th>
          <th class="text-end" style="width: 220px">Actions</th>
        </tr>
      </thead>
      <tbody>
      @if (!Model.Any())
      {
          <tr>
            <td colspan="5" class="text-muted">No social sites found.</td>
          </tr>
      }
      else
      {
          foreach (var s in Model)
          {
              <tr>
                  <td><i class="@s.Icon" title="@s.Icon" aria-hidden="true"></i></td>
                  <td>@s.Name</td>
                  <td><code>@s.Icon</code></td>
                  <td><code>@s.UrlFormat</code></td>
                  <td class="text-end">
                      <a class="btn btn-sm btn-outline-secondary" asp-page="Edit" asp-route-id="@s.Id">
                          <i class="bi bi-pencil-square me-1"></i>Edit
                      </a>
                      <a class="btn btn-sm btn-outline-danger" asp-page="Delete" asp-route-id="@s.Id">
                          <i class="bi bi-trash3 me-1"></i>Delete
                      </a>
                  </td>
              </tr>
          }
      }
      </tbody>
    </table>
  </div>
</div>
