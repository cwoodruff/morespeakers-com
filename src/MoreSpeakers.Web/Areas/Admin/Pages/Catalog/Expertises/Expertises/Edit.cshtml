@page "{id:int}"
@using MoreSpeakers.Web.Models.ViewModels
@model MoreSpeakers.Web.Areas.Admin.Pages.Catalog.Expertises.Expertises.EditModel

@{
    ViewData["Title"] = "Edit - Expertise - Expertise";
}

<h1 class="mb-4">Edit Expertise </h1>

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Index">Admin</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Expertises/Expertises/Index">Expertises</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>

<form method="post">
    <input type="hidden" asp-for="Id" />
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="Input.Name" class="form-label"></label>
        @{
            var nameValidationModel = new NameValidationInputViewModel()
            {
                Name = Model.Input.Name,
                InputName = "Input.Name",
                Placeholder = "The name of sector",
                SearchEndPointUrl = "expertises/searchExpertises"
            };
        }
        <partial name="/Areas/Admin/Pages/Shared/_NameValidationInput.cshtml" model="nameValidationModel"/>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Description" class="form-label"></label>
        <textarea asp-for="Input.Description" class="form-control"></textarea>
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Sector</label>
        <select name="SectorId" class="form-select"
                hx-target="#ExpertiseCategoryDropDown"
                hx-indicator="#loading-expertise-categories"
                hx-get="/Admin/Expertises/Expertises/Edit/@Model.Id?handler=ExpertiseCategories"
                hx-include="this"
                asp-items="Model.Sectors.Select(s => new SelectListItem(s.Name, s.Id.ToString()))"
                asp-for="SectorId">
        </select>
    </div>
    @{
        var expertiseCategoryDropDownViewModel = new ExpertiseCategoryDropDownViewModel
        {
            ExpertiseCategories = Model.ExpertiseCategories,
            SelectedCategoryId = Model.Input.ExpertiseCategoryId
        };
        await Html.RenderPartialAsync("_ExpertiseCategorySelectItem", expertiseCategoryDropDownViewModel);
    }
    <div class="form-check form-switch mb-3">
        <input class="form-check-input" asp-for="Input.IsActive"/>
        <label class="form-check-label" asp-for="Input.IsActive">Active</label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="../Categories/Index" class="btn btn-secondary">Back</a>

    <div asp-validation-summary="All" class="text-danger"></div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}