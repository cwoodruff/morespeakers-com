@page "{id:int}"
@model MoreSpeakers.Web.Areas.Admin.Pages.Expertises.Sectors.DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Admin â€¢ Sector Details";
}

<h1 class="mb-4">Sector Details</h1>

<nav aria-label="breadcrumb" class="mb-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Index">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Expertises/Sectors/Index">Sectors</a></li>
    <li class="breadcrumb-item active" aria-current="page">Details</li>
  </ol>
</nav>

<div class="card">
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3">Name</dt>
      <dd class="col-sm-9">@Model.Sector?.Name</dd>

      <dt class="col-sm-3">Slug</dt>
      <dd class="col-sm-9">@Model.Sector?.Slug</dd>

      <dt class="col-sm-3">Description</dt>
      <dd class="col-sm-9">@Model.Sector?.Description</dd>

      <dt class="col-sm-3">Display Order</dt>
      <dd class="col-sm-9">@Model.Sector?.DisplayOrder</dd>

      <dt class="col-sm-3">Status</dt>
      <dd class="col-sm-9">
        @if (Model.Sector?.IsActive == true) { <span class="badge bg-success">Active</span> } else { <span class="badge bg-secondary">Inactive</span> }
      </dd>
    </dl>

    <div class="mt-3 d-flex gap-2">
      <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@Model.Sector?.Id">Edit</a>
      <a class="btn btn-outline-secondary" asp-page="Index">Back</a>
    </div>
  </div>
  </div>
