@page "{id:int}"
@using MoreSpeakers.Domain.Models
@model MoreSpeakers.Web.Areas.Admin.Pages.Expertises.Sectors.DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Admin â€¢ Sector Details";
}

<h1 class="mb-4">Sector Details</h1>

<nav aria-label="breadcrumb" class="mb-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Index">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Expertises/Sectors/Index">Sectors</a></li>
    <li class="breadcrumb-item active" aria-current="page">Details</li>
  </ol>
</nav>

<div class="card mb-4">
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3">Name</dt>
      <dd class="col-sm-9">@Model.Sector?.Name</dd>

      <dt class="col-sm-3">Slug</dt>
      <dd class="col-sm-9">@Model.Sector?.Slug</dd>

      <dt class="col-sm-3">Description</dt>
      <dd class="col-sm-9">@Model.Sector?.Description</dd>

      <dt class="col-sm-3">Display Order</dt>
      <dd class="col-sm-9">@Model.Sector?.DisplayOrder</dd>

      <dt class="col-sm-3">Status</dt>
      <dd class="col-sm-9">
        @if (Model.Sector?.IsActive == true) { <span class="badge bg-success">Active</span> } else { <span class="badge bg-secondary">Inactive</span> }
      </dd>
    </dl>

    <div class="mt-3 d-flex gap-2">
      <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@Model.Sector?.Id">Edit</a>
      <a class="btn btn-outline-secondary" asp-page="Index">Back</a>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <strong>Categories in this Sector</strong>
  </div>
  <div class="card-body p-0">
    @if (Model.Sector?.ExpertiseCategories.Count == 0)
    {
      <div class="p-3 text-muted">No categories assigned.</div>
    }
    else
    {
      <div class="table-responsive">
        <table class="table mb-0">
          <thead>
          <tr>
            <th class="col-4">Name</th>
            <th>Description</th>
            <th class="col-2">Status</th>
            <th class="col-2"></th>
          </tr>
          </thead>
          <tbody>
          @foreach (var e in Model.Sector?.ExpertiseCategories?? Enumerable.Empty<ExpertiseCategory>())
          {
            <tr>
              <td>@e.Name</td>
              <td>@e.Description</td>
              <td>@if (e.IsActive) { <span class="badge bg-success">Active</span> } else { <span class="badge bg-secondary">Inactive</span> }</td>
              <td>
                <a class="btn btn-sm btn-outline-secondary" asp-area="Admin" asp-page="/Expertises/Categories/Details" asp-route-id="@e.Id"><i class="bi bi-eye"></i></a>
                <a class="btn btn-sm btn-outline-primary" asp-area="Admin" asp-page="/Expertises/Categories/Edit" asp-route-id="@e.Id"><i class="bi bi-pencil"></i></a>
                @if (e.IsActive)
                {
                  <form method="post" asp-area="Admin" asp-page="/Expertises/Categories/Index" asp-page-handler="Deactivate" asp-route-id="@e.Id" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Deactivate"><i class="bi bi-archive"></i></button>
                  </form>
                }
                else
                {
                  <form method="post" asp-area="Admin" asp-page="/Expertises/Categories/Index" asp-page-handler="Activate" asp-route-id="@e.Id" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-success" title="Activate"><i class="bi bi-arrow-counterclockwise"></i></button>
                  </form>
                }
              </td>
            </tr>
          }
          </tbody>
        </table>
      </div>
    }
  </div>
</div>