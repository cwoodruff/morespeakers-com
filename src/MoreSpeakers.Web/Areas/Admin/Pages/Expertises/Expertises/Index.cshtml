@page
@using MoreSpeakers.Domain.Models.AdminUsers
@model MoreSpeakers.Web.Areas.Admin.Pages.Expertises.Expertises.IndexModel
@{
    ViewData["Title"] = "Admin • Expertises";
}

<h1 class="mb-3">Expertises</h1>

<nav aria-label="breadcrumb" class="mb-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Index">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Expertises/Expertises/Index">Expertise</a></li>
    <li class="breadcrumb-item active" aria-current="page">Expertises</li>
  </ol>
  <div class="ms-auto">
    <a class="btn btn-primary" asp-area="Admin" asp-page="/Expertises/Expertises/Create"><i class="bi bi-plus-lg"></i> New Expertise</a>
  </div>
</nav>

<form class="row g-2 align-items-center mb-3" method="get">
  <div class="col-auto">
    <div class="input-group">
      <span class="input-group-text"><i class="bi bi-search"></i></span>
      <input name="q" id="q" class="form-control" placeholder="Search by name…" value="@Model.Q" />
    </div>
  </div>
  <div class="col-auto">
    <select class="form-select" name="status" aria-label="Filter by status" value="@Model.Status">
      <option value="any" selected="@(Model.Status==TriState.Any)">Any status</option>
      <option value="active" selected="@(Model.Status==TriState.True)">Active</option>
      <option value="inactive" selected="@(Model.Status==TriState.False)">Inactive</option>
    </select>
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-outline-secondary">Filter</button>
  </div>
</form>
<div class="table-responsive">
  <table class="table table-striped align-middle">
    <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th class="d-none d-md-table-cell">Description</th>
      <th>Status</th>
      <th class="text-end">Actions</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Items.Count == 0)
    {
        <tr>
          <td colspan="4" class="text-muted">No expertises found.</td>
        </tr>
    }
    else
    {
        foreach (var e in Model.Items)
        {
            <tr>
              <td>@e.Name</td>
              <td>@(e.ExpertiseCategory?.Name ?? "—")</td>
              <td class="d-none d-md-table-cell">@e.Description</td>
              <td>
                @if (e.IsActive)
                {
                  <span class="badge bg-success">Active</span>
                }
                else
                {
                  <span class="badge bg-secondary">Inactive</span>
                }
              </td>
              <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-page="Details" asp-route-id="@e.Id"><i class="bi bi-eye"></i></a>
                <a class="btn btn-sm btn-outline-primary" asp-page="Edit" asp-route-id="@e.Id"><i class="bi bi-pencil"></i></a>
                
                @if (e.IsActive)
                {
                  <form method="post" asp-page-handler="Deactivate" asp-route-id="@e.Id" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Deactivate"><i class="bi bi-archive"></i></button>
                  </form>
                }
                else
                {
                  <form method="post" asp-page-handler="Activate" asp-route-id="@e.Id" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-success" title="Activate"><i class="bi bi-arrow-counterclockwise"></i></button>
                  </form>
                }
              </td>
            </tr>
        }
    }
    </tbody>
  </table>
 </div>
