@model MoreSpeakers.Web.Models.ViewModels.ExpertiseCategoryDropDownViewModel

<div id="ExpertiseCategoryDropDown" class="mb-3">
        <label for="#Input.ExpertiseCategoryId" class="form-label">Category</label>
        <select name="Input.ExpertiseCategoryId" class="form-select"
                asp-items="Model.ExpertiseCategories.Select(s => new SelectListItem(s.Name, s.Id.ToString()))"
                asp-for="@Model.SelectedCategoryId"
                id="#Input.ExpertiseCategoryId">
        </select>
        <div id="loading-expertise-categories" class="spinner-border text-primary htmx-indicator" role="status">
                <span class="visually-hidden">Loading...</span>
        </div>
</div>