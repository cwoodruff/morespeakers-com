@page
@using MoreSpeakers.Domain.Models.AdminUsers
@model MoreSpeakers.Web.Areas.Admin.Pages.Expertises.Categories.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Admin • Expertise Categories";
}

<h1 class="mb-4">Expertise Categories</h1>

<nav aria-label="breadcrumb" class="mb-3 d-flex">
  <ol class="breadcrumb mb-0">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Index">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Expertises/Index">Expertises</a></li>
    <li class="breadcrumb-item active" aria-current="page">Categories</li>
  </ol>

  <div class="ms-auto d-flex gap-2">
    <a class="btn btn-primary" asp-page="Create"><i class="bi bi-plus-lg me-1"></i>New Category</a>
  </div>
</nav>

<form class="row g-2 align-items-center mb-3" method="get">
  <div class="col-auto">
    <div class="input-group">
      <span class="input-group-text"><i class="bi bi-search"></i></span>
      <input name="q" id="q" class="form-control" placeholder="Search by name…" value="@Model.Q" />
    </div>
  </div>
  <div class="col-auto">
    <select class="form-select" name="status" aria-label="Filter by status" value="@Model.Status">
      <option value="any" selected="@(Model.Status==TriState.Any)">Any status</option>
      <option value="active" selected="@(Model.Status==TriState.True)">Active</option>
      <option value="inactive" selected="@(Model.Status==TriState.False)">Inactive</option>
    </select>
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-outline-secondary">Filter</button>
  </div>
</form>

<div class="table-responsive">
  <table class="table align-middle">
    <thead>
      <tr>
        <th class="col-3">Name</th>
        <th class="col-3">Sector</th>
        <th>Description</th>
        <th class="col-1">Status</th>
        <th class="col-2"></th>
      </tr>
    </thead>
    <tbody>
    @foreach (var c in Model.Items)
    {
      <tr class="@(c.IsActive ? string.Empty : "table-secondary")">
        <td>@c.Name</td>
        <td>
          @if (c.Sector is not null)
          {
            @c.Sector.Name
          }
          else
          {
            <span class="text-muted">(sector id: @c.SectorId)</span>
          }
        </td>
        <td>@c.Description</td>
        <td>
          @if (c.IsActive)
          {
            <span class="badge bg-success">Active</span>
          }
          else
          {
            <span class="badge bg-secondary">Inactive</span>
          }
        </td>
        <td class="text-end">
          <a class="btn btn-sm btn-outline-secondary" asp-page="Details" asp-route-id="@c.Id"><i class="bi bi-eye"></i></a>
          <a class="btn btn-sm btn-outline-primary" asp-page="Edit" asp-route-id="@c.Id"><i class="bi bi-pencil"></i></a>
          @if (c.IsActive)
          {
            <form method="post" asp-page-handler="Deactivate" asp-route-id="@c.Id" class="d-inline">
              <button type="submit" class="btn btn-sm btn-outline-danger" title="Deactivate"><i class="bi bi-archive"></i></button>
            </form>
          }
          else
          {
            <form method="post" asp-page-handler="Activate" asp-route-id="@c.Id" class="d-inline">
              <button type="submit" class="btn btn-sm btn-outline-success" title="Activate"><i class="bi bi-arrow-counterclockwise"></i></button>
            </form>
          }
        </td>
      </tr>
    }
    </tbody>
  </table>
</div>
