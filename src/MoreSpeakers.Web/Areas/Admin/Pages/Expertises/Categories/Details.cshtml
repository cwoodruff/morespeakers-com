@page "{id:int}"
@model MoreSpeakers.Web.Areas.Admin.Pages.Expertises.Categories.DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Admin â€¢ Category Details";
}

<h1 class="mb-4">Category Details</h1>

<nav aria-label="breadcrumb" class="mb-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Index">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Expertises/Categories/Index">Categories</a></li>
    <li class="breadcrumb-item active" aria-current="page">Details</li>
  </ol>
</nav>

<div class="card mb-4">
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3">Name</dt>
      <dd class="col-sm-9">@Model.Category?.Name</dd>

      <dt class="col-sm-3">Sector</dt>
      <dd class="col-sm-9">@Model.Sector?.Name</dd>

      <dt class="col-sm-3">Description</dt>
      <dd class="col-sm-9">@Model.Category?.Description</dd>

      <dt class="col-sm-3">Status</dt>
      <dd class="col-sm-9">
        @if (Model.Category?.IsActive == true) { <span class="badge bg-success">Active</span> } else { <span class="badge bg-secondary">Inactive</span> }
      </dd>
    </dl>

    <div class="mt-3 d-flex gap-2">
      <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@Model.Category?.Id">Edit</a>
      <a class="btn btn-outline-secondary" asp-page="Index">Back</a>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <strong>Expertises in this Category</strong>
  </div>
  <div class="card-body p-0">
    @if (Model.Expertises.Count == 0)
    {
      <div class="p-3 text-muted">No expertises assigned.</div>
    }
    else
    {
      <div class="table-responsive">
        <table class="table mb-0">
          <thead>
            <tr>
              <th class="col-4">Name</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
          @foreach (var e in Model.Expertises)
          {
            <tr>
              <td>@e.Name</td>
              <td>@e.Description</td>
            </tr>
          }
          </tbody>
        </table>
      </div>
    }
  </div>
</div>
