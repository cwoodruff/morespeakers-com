@page
@model MoreSpeakers.Web.Areas.Admin.Pages.Expertises.Categories.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Admin â€¢ New Category";
}

<h1 class="mb-4">New Expertise Category</h1>

<nav aria-label="breadcrumb" class="mb-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Index">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Expertises/Categories/Index">Categories</a></li>
    <li class="breadcrumb-item active" aria-current="page">Create</li>
  </ol>
</nav>

<form method="post" class="card">
  <div class="card-body">
    <div class="mb-3">
      <label asp-for="Input.Name" class="form-label"></label>
      <input asp-for="Input.Name" class="form-control" />
      <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Input.Description" class="form-label"></label>
      <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
      <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Input.SectorId" class="form-label">Sector</label>
      <select asp-for="Input.SectorId" class="form-select"
              asp-items="@(new SelectList(Model.Sectors, nameof(MoreSpeakers.Domain.Models.Sector.Id), nameof(MoreSpeakers.Domain.Models.Sector.Name)))">
        <option value="">-- Select sector --</option>
      </select>
      <span asp-validation-for="Input.SectorId" class="text-danger"></span>
    </div>

    <div class="form-check form-switch mb-3">
      <input class="form-check-input" asp-for="Input.IsActive" />
      <label class="form-check-label" asp-for="Input.IsActive">Active</label>
    </div>
  </div>
  <div class="card-footer d-flex gap-2">
    <button type="submit" class="btn btn-primary">Create</button>
    <a class="btn btn-outline-secondary" asp-page="Index">Cancel</a>
  </div>
</form>
