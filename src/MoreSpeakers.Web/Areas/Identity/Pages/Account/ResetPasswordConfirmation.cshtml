@page
@{
    ViewData["Title"] = "Reset password confirmation";
}

<div class="container-fluid">
    <div class="row min-vh-100">
        <!-- Welcome Section -->
        <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center bg-primary text-white">
            <div class="text-center px-4">
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill display-1"></i>
                </div>
                <h2 class="fw-bold mb-3">Password Updated</h2>
                <p class="lead mb-4">Your password has been reset successfully. You can now sign in with your new credentials.</p>
            </div>
        </div>

        <!-- Message Section -->
        <div class="col-lg-6 d-flex align-items-center justify-content-center py-5">
            <div class="w-100" style="max-width: 450px;">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-5 text-center">
                        <div class="mb-4">
                            <i class="bi bi-shield-check text-success display-4"></i>
                        </div>
                        <h1 class="h3 fw-bold text-primary mb-3">Success!</h1>
                        <p class="text-muted mb-4">
                            Your password has been reset. Please click the button below to sign in.
                        </p>
                        <div class="d-grid gap-2">
                            <a asp-page="./Login" class="btn btn-primary py-2">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
