@model MoreSpeakers.Web.Areas.Identity.Pages.Account.RegisterModel

<div class="form-step" data-step="5">
    <!-- Hero Section -->
    <div class="text-center mb-5">
        <div class="mx-auto mb-4">
            <div class="position-relative d-inline-block">
                <div class="align-items-center justify-content-center" 
                     style="width: 120px; height: 120px;">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 4.5rem;"></i>
                </div>
            </div>
        </div>

        <h2 class="text-success fw-bold mb-2">
            ðŸŽ‰ Welcome to MoreSpeakers.com!
        </h2>
        <p class="lead text-muted mb-1">
            Congratulations <strong class="text-primary">@Model.Input.FirstName @Model.Input.LastName</strong>!
        </p>
        <p class="text-muted">Your speaker profile has been created successfully</p>
    </div>

    <!-- Registration Summary Card -->
    <div class="card border-0 shadow-sm mb-5">
        <div class="card-header bg-primary bg-opacity-10 border-0">
            <h5 class="mb-0 text-color fw-bold">
                <i class="bi bi-person-check me-2"></i>
                Your Profile Summary
            </h5>
        </div>
        <div class="card-body p-4">
            <div class="row g-4">
                <!-- Personal Information -->
                <div class="col-md-6">
                    <div class="h-100 bg-opacity-50 rounded-3 p-3 border border-primary border-opacity-10">
                        <div class="d-flex align-items-start">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="bi bi-person text-color"></i>
                            </div>
                            <div class="flex-grow-1">
                                <small class="text-muted text-uppercase fw-bold d-block">Full Name</small>
                                <span class="fw-semibold text-dark">@Model.Input.FirstName @Model.Input.LastName</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="h-100 bg-opacity-50 rounded-3 p-3 border border-primary border-opacity-10">
                        <div class="d-flex align-items-start">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="bi bi-envelope text-color"></i>
                            </div>
                            <div class="flex-grow-1">
                                <small class="text-muted text-uppercase fw-bold d-block">Email</small>
                                <span class="fw-semibold text-dark">@Model.Input.Email</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="h-100 bg-opacity-50 rounded-3 p-3 border border-primary border-opacity-10">
                        <div class="d-flex align-items-start">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="bi @(Model.Input.SpeakerTypeId == 1 ? "bi-person-plus" : "bi-award") text-color"></i>
                            </div>
                            <div class="flex-grow-1">
                                <small class="text-muted text-uppercase fw-bold d-block">Speaker Type</small>
                                <span class="badge @(Model.Input.SpeakerTypeId == 1 ? "bg-primary" : "bg-success")">
                                    @(Model.Input.SpeakerTypeId == 1 ? "New Speaker" : "Experienced Speaker")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="h-100 bg-opacity-50 rounded-3 p-3 border border-primary border-opacity-10">
                        <div class="d-flex align-items-start">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="bi bi-telephone text-color"></i>
                            </div>
                            <div class="flex-grow-1">
                                <small class="text-muted text-uppercase fw-bold d-block">Phone</small>
                                <span class="fw-semibold text-dark">@Model.Input.PhoneNumber</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Input.SelectedExpertiseIds?.Any() == true && Model.AllExpertise?.Any() == true)
            {
                <div class="mt-4 pt-3 border-top border-primary border-opacity-10">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                            <i class="bi bi-lightbulb text-color"></i>
                        </div>
                        <small class="text-muted text-uppercase fw-bold">Areas of Expertise</small>
                    </div>
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var expertiseId in Model.Input.SelectedExpertiseIds)
                        {
                            var expertise = Model.AllExpertise.FirstOrDefault(e => e.Id == expertiseId);
                            if (expertise != null)
                            {
                                <span class="badge rounded-pill text-bg-primary fw-light">
                                    @expertise.Name
                                </span>
                            }
                        }
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Email Confirmation Notice -->
    <div class="alert alert-info border-0 shadow-sm mb-5">
        <div class="d-flex align-items-start">
            <div class="me-3">
                <div class="bg-info bg-opacity-20 rounded-circle p-3">
                    <i class="bi bi-envelope-heart" style="font-size: 1.5rem;"></i>
                </div>
            </div>
            <div class="flex-grow-1">
                <h5 class="alert-heading text-info fw-bold mb-2">ðŸ“§ Check Your Email!</h5>
                <p class="mb-2">
                    We've sent a personalized welcome email to <strong class="text-dark">@Model.Input.Email</strong> 
                    with your account details and helpful next steps to get started.
                </p>
                <hr class="my-3 border-info border-opacity-25">
                <p class="mb-0 small text-info">
                    <i class="bi bi-lightbulb me-1"></i>
                    <strong>Tip:</strong> If you don't see the email in your inbox within a few minutes, 
                    please check your spam or junk folder.
                </p>
            </div>
        </div>
    </div>

    <!-- Next Steps -->
    <div class="mb-5">
        <div class="text-center mb-4">
            <h4 class="fw-bold text-primary mb-2">
                <i class="bi bi-rocket me-2"></i>
                Ready to Launch Your Speaking Journey?
            </h4>
            <p class="text-muted">Here's how to make the most of your MoreSpeakers.com membership:</p>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <div class="bg-primary bg-opacity-10 rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                                 style="width: 80px; height: 80px;">
                                <span class="badge bg-primary rounded-pill fs-4 fw-bold">1</span>
                            </div>
                        </div>
                        <h5 class="fw-bold text-color mb-3">Complete Your Profile</h5>
                        <p class="text-muted mb-3">
                            Add a professional headshot, detailed bio, and showcase your expertise 
                            to help others find and connect with you.
                        </p>
                        <div class="text-color">
                            <i class="bi bi-person-gear" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <div class="bg-success bg-opacity-10 rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                                 style="width: 80px; height: 80px;">
                                <span class="badge bg-success rounded-pill fs-4 fw-bold">2</span>
                            </div>
                        </div>
                        <h5 class="fw-bold text-success mb-3">
                            @(Model.Input.SpeakerTypeId == 1 ? "Find Your Mentors" : "Connect with New Speakers")
                        </h5>
                        <p class="text-muted mb-3">
                            @(Model.Input.SpeakerTypeId == 1 
                                ? "Browse our community of experienced speakers and find mentors who can guide your speaking journey."
                                : "Discover new speakers who could benefit from your experience and mentorship.")
                        </p>
                        <div class="text-success">
                            <i class="bi @(Model.Input.SpeakerTypeId == 1 ? "bi-search-heart" : "bi-person-hearts")" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <div class="bg-info bg-opacity-10 rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                                 style="width: 80px; height: 80px;">
                                <span class="badge bg-info rounded-pill fs-4 fw-bold">3</span>
                            </div>
                        </div>
                        <h5 class="fw-bold text-info mb-3">Join the Community</h5>
                        <p class="text-muted mb-3">
                            Connect with fellow speakers, share experiences, and participate in discussions 
                            that will help you grow.
                        </p>
                        <div class="text-info">
                            <i class="bi bi-people-fill" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call-to-Action Buttons -->
    <div class="text-center">
        <div class="mb-4">
            <div class="d-grid d-sm-flex gap-3 justify-content-sm-center">
                <a href="@Url.Page("/Profile/Edit")" class="btn btn-primary btn-lg px-4 py-3 shadow-sm">
                    <i class="bi bi-pencil me-2"></i>
                    Complete My Profile
                </a>
                <a asp-page="~/Speakers/Index" class="btn btn-outline-primary btn-lg px-4 py-3">
                    <i class="bi bi-people me-2"></i>
                    Explore Community
                </a>
            </div>
        </div>

        <!-- Alternative Quick Actions -->
        <div class="mb-4">
            <p class="text-muted small mb-3">or get started with these quick actions:</p>
            <div class="d-flex flex-wrap justify-content-center gap-2">
                <a href="@Url.Page("/Index")" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-house me-1"></i>Go to Home
                </a>
                @if (Model.Input.SpeakerTypeId == 1)
                {
                    <a href="@Url.Page("/Mentorship/Index")" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-person-workspace me-1"></i>Find Mentors
                    </a>
                }
                else
                {
                    <a href="@Url.Page("/Mentorship/Index")" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-person-hearts me-1"></i>Mentor Others
                    </a>
                }
                <a href="@Url.Page("/About")" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-info-circle me-1"></i>Learn More
                </a>
            </div>
        </div>

        <!-- Thank You Message -->
        <div class="mt-5 pt-4 border-top border-primary border-opacity-10">
            <div class="bg-primary bg-opacity-5 rounded-4 p-4">
                <h6 class="text-color fw-bold mb-2">
                    <i class="bi bi-heart-fill text-danger me-2"></i>
                    Welcome to the Family!
                </h6>
                <p class="text-muted mb-0">
                    Thank you for joining MoreSpeakers.com! We're thrilled to have you in our growing 
                    community of passionate speakers. Your journey to speaking excellence starts now! ðŸš€
                </p>
            </div>
        </div>
    </div>
</div>