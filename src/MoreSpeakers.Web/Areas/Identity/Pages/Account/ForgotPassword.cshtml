@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container-fluid">
    <div class="row min-vh-100">
        <!-- Welcome Section (Mirroring Login) -->
        <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center bg-primary text-white">
            <div class="text-center px-4">
                <div class="mb-4">
                    <i class="bi bi-shield-lock-fill display-1"></i>
                </div>
                <h2 class="fw-bold mb-3">Reset Your Password</h2>
                <p class="lead mb-4">Don't worry! It happens to the best of us. Let's get you back into your account.</p>
            </div>
        </div>

        <!-- Form Section -->
        <div class="col-lg-6 d-flex align-items-center justify-content-center py-5">
            <div class="w-100" style="max-width: 400px;">
                <div class="text-center mb-4">
                    <h1 class="h3 fw-bold text-primary">Forgot Password?</h1>
                    <p>Enter your email address and we'll send you a link to reset your password.</p>
                </div>

                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            
                            <div class="mb-4">
                                <label asp-for="Input.Email" class="form-label fw-medium">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text border-end-0">
                                        <i class="bi bi-envelope"></i>
                                    </span>
                                    <input asp-for="Input.Email" class="form-control border-start-0" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                                </div>
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 py-2 mb-3">
                                <i class="bi bi-send me-2"></i>Send Reset Link
                            </button>
                            
                            <div class="text-center">
                                <a asp-page="./Login" class="text-decoration-none small">
                                    <i class="bi bi-arrow-left me-1"></i>Back to Sign In
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
