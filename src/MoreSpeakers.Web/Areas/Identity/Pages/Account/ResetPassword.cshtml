@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="container-fluid">
    <div class="row min-vh-100">
        <!-- Welcome Section -->
        <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center bg-primary text-white">
            <div class="text-center px-4">
                <div class="mb-4">
                    <i class="bi bi-key-fill display-1"></i>
                </div>
                <h2 class="fw-bold mb-3">Create New Password</h2>
                <p class="lead mb-4">Almost there! Choose a strong password to secure your account.</p>
            </div>
        </div>

        <!-- Form Section -->
        <div class="col-lg-6 d-flex align-items-center justify-content-center py-5">
            <div class="w-100" style="max-width: 400px;">
                <div class="text-center mb-4">
                    <h1 class="h3 fw-bold text-primary">Reset Password</h1>
                    <p>Enter your details below to set a new password.</p>
                </div>

                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            <input asp-for="Input.Token" type="hidden" />

                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label fw-medium">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text border-end-0">
                                        <i class="bi bi-envelope"></i>
                                    </span>
                                    <input asp-for="Input.Email" class="form-control border-start-0 bg-light" autocomplete="username" aria-required="true" readonly />
                                </div>
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label fw-medium">New Password</label>
                                <div class="input-group">
                                    <span class="input-group-text border-end-0">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input asp-for="Input.Password" class="form-control border-start-0" autocomplete="new-password" aria-required="true" placeholder="New password" />
                                </div>
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Input.ConfirmPassword" class="form-label fw-medium">Confirm New Password</label>
                                <div class="input-group">
                                    <span class="input-group-text border-end-0">
                                        <i class="bi bi-lock-check"></i>
                                    </span>
                                    <input asp-for="Input.ConfirmPassword" class="form-control border-start-0" autocomplete="new-password" aria-required="true" placeholder="Confirm password" />
                                </div>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 py-2 mb-3">
                                <i class="bi bi-check-circle me-2"></i>Reset Password
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
