@page
@model AboutModel
@{
    ViewData["Title"] = "About";
}

<div class="container">
    <div class="row align-items-center">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-4 fw-bold">About MoreSpeakers.com</h1>
            <p class="lead">Empowering the next generation of technology speakers through mentorship and
                community.</p>
        </div>
    </div>
    
    <!-- Mission Section -->
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-body text-center py-5">
                    <h2 class="card-title text-primary mb-4">Our Mission</h2>
                    <p class="lead">To bridge the gap between aspiring and experienced speakers in the technology
                        community by creating meaningful mentorship relationships that foster growth, confidence, and
                        knowledge sharing.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Why We Started Section -->
    <div class="row mb-5">
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="display-4 text-primary mb-3">
                        <i class="bi bi-lightbulb-fill"></i>
                    </div>
                    <h3 class="card-title">The Problem</h3>
                    <p class="card-text">Many talented developers and technologists have valuable knowledge to share but
                        lack the confidence, connections, or guidance to start speaking at conferences and events.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="display-4 text-primary mb-3">
                        <i class="bi bi-heart-fill"></i>
                    </div>
                    <h3 class="card-title">Our Solution</h3>
                    <p class="card-text">We connect new speakers with experienced mentors who provide guidance, support,
                        and practical advice to help them succeed in their speaking journey.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- What We Offer Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-5">What We Offer</h2>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <div class="display-4 text-primary mb-3">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <h5 class="card-title">Mentorship Matching</h5>
                    <p class="card-text">Connect with experienced speakers who share your expertise areas and can guide
                        you through your speaking journey.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <div class="display-4 text-primary mb-3">
                        <i class="bi bi-chat-dots-fill"></i>
                    </div>
                    <h5 class="card-title">Talk Development</h5>
                    <p class="card-text">Get help crafting compelling abstracts, developing engaging content, and
                        structuring presentations that resonate with audiences.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <div class="display-4 text-primary mb-3">
                        <i class="bi bi-calendar-event-fill"></i>
                    </div>
                    <h5 class="card-title">Conference Guidance</h5>
                    <p class="card-text">Learn about suitable conferences, submission strategies, and how to navigate
                        the speaking circuit effectively.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Values Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body py-5">
                    <h2 class="text-center mb-5">Our Values</h2>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <div class="text-center">
                                <div class="text-primary mb-2">
                                    <i class="bi bi-shield-check display-5"></i>
                                </div>
                                <h6 class="fw-bold">Inclusivity</h6>
                                <p class="small text-muted">Welcoming speakers from all backgrounds and experience
                                    levels</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="text-center">
                                <div class="text-primary mb-2">
                                    <i class="bi bi-hand-thumbs-up display-5"></i>
                                </div>
                                <h6 class="fw-bold">Support</h6>
                                <p class="small text-muted">Providing genuine help and encouragement throughout the
                                    journey</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="text-center">
                                <div class="text-primary mb-2">
                                    <i class="bi bi-arrow-up-circle display-5"></i>
                                </div>
                                <h6 class="fw-bold">Growth</h6>
                                <p class="small text-muted">Fostering continuous learning and skill development</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="text-center">
                                <div class="text-primary mb-2">
                                    <i class="bi bi-globe display-5"></i>
                                </div>
                                <h6 class="fw-bold">Community</h6>
                                <p class="small text-muted">Building lasting connections within the tech speaking
                                    community</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- How to Get Started Section -->
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto">
            <div class="card bg-primary text-white">
                <div class="card-body text-center py-5">
                    <h3 class="card-title">Ready to Get Started?</h3>
                    <p class="card-text lead mb-4">Whether you're looking to start your speaking journey or share your
                        expertise as a mentor, we're here to help you connect and grow.</p>
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Page("/Account/Register", new { area = "Identity", speakerType = "NewSpeaker" })"
                               class="btn btn-light btn-lg">
                                <i class="bi bi-person-plus me-2"></i>Join as New Speaker
                            </a>
                            <a href="@Url.Page("/Account/Register", new { area = "Identity", speakerType = "ExperiencedSpeaker" })"
                               class="btn btn-outline-light btn-lg">
                                <i class="bi bi-award me-2"></i>Become a Mentor
                            </a>
                        }
                        else
                        {
                            <a asp-page="/BrowseSpeakers" class="btn btn-light btn-lg">
                                <i class="bi bi-search me-2"></i>Browse Speakers
                            </a>
                            <a asp-page="/Profile/Index" class="btn btn-outline-light btn-lg">
                                <i class="bi bi-person me-2"></i>My Profile
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Section -->
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card">
                <div class="card-body text-center py-4">
                    <h4 class="card-title">Questions or Feedback?</h4>
                    <p class="card-text">We'd love to hear from you! Reach out if you have any questions about the
                        platform or suggestions for improvement.</p>
                    <a href="mailto:support@morespeakers.com" class="btn btn-primary">
                        <i class="bi bi-envelope me-2"></i>Contact Us
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
}