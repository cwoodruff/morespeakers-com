@page
@model MoreSpeakers.Web.Pages.Profile.IndexModel
@{
    ViewData["Title"] = "Profile";
}
@{
    string hidden = string.Empty;
    if (!Model.CanEdit) {hidden = "d-none"; }
}
<div class="container py-4">
    <div class="row @hidden">
        <!-- Profile Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-1">My Profile</h1>
                <p class="text-muted mb-0">Manage your speaker profile and account settings</p>
            </div>
            <div>
                <a asp-page="/Profile/Edit" class="btn btn-primary">
                    <i class="bi bi-pencil me-2"></i>Edit Profile
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <!-- Profile View Container -->
        <div id="profileContainer">
            <partial name="_ProfileView" model="Model" />
        </div>
    </div>
</div>