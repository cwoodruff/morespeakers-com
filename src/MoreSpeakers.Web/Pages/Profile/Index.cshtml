@page
@model MoreSpeakers.Web.Pages.Profile.IndexModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-4">
    <!-- Profile Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">My Profile</h1>
            <p class="text-muted mb-0">Manage your speaker profile and account settings</p>
        </div>
        <div>
            <a href="/Profile/Edit" class="btn btn-primary">
                <i class="bi bi-pencil me-2"></i>Edit Profile
            </a>
        </div>
    </div>

    <!-- Profile View Container -->
    <div id="profileContainer">
        <partial name="_ProfileView" model="Model" />
    </div>
</div>

@section Scripts {
    <script>
        // Simple JavaScript for enhanced UX
        document.addEventListener('DOMContentLoaded', function() {
            // Add smooth transitions
            const profileContainer = document.getElementById('profileContainer');
            if (profileContainer) {
                profileContainer.style.transition = 'opacity 0.3s ease';
            }
        });
    </script>
}