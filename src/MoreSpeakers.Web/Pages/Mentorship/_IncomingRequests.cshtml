@model List<MoreSpeakers.Web.Models.Mentorship>

@if (!Model.Any())
{
    <div class="text-center py-4">
        <i class="bi bi-inbox display-4 text-muted"></i>
        <h6 class="mt-3">No incoming requests</h6>
        <p class="text-muted">You'll see mentorship requests here when they arrive.</p>
    </div>
}
else
{
    @foreach (var request in Model)
    {
        @await Html.PartialAsync("_IncomingRequestCard", request)
    }
}
