@page
@model MoreSpeakers.Web.Pages.Mentorship.RequestsModel
@{
    ViewData["Title"] = "Mentorship Requests";
}

<!-- Hidden form to supply anti-forgery token for HTMX requests -->
<form id="htmx-af" method="post" style="display:none">
    @Html.AntiForgeryToken()
</form>

<div class="container">
    <!-- OOB toast target -->
    <div id="toast-zone"></div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Mentorship Requests</h2>
            <p class="text-muted mb-0">Manage your incoming and outgoing mentorship requests</p>
        </div>
        <a asp-page="/Mentorship/Browse" class="btn btn-primary">
            <i class="bi bi-search me-2"></i>Find Mentors
        </a>
    </div>

    <div class="row">
        <!-- Incoming Requests -->
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    @await Html.PartialAsync("_RequestsNotificationBadge", new RequestNotificationBadgeViewModel() {Count = Model.IncomingRequests.Count, NotificationDirection = RequestNotificationDirection.Inbound})
                </div>
                <div class="card-body">
                    <div id="incoming-requests" hx-get="/Mentorship/Requests?handler=PollIncoming">
                        @await Html.PartialAsync("_IncomingRequests", Model.IncomingRequests)
                    </div>
                </div>
            </div>
        </div>

        <!-- Outgoing Requests -->
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header">
                    @await Html.PartialAsync("_RequestsNotificationBadge", new RequestNotificationBadgeViewModel() {Count = Model.OutgoingRequests.Count, NotificationDirection = RequestNotificationDirection.Outbound})
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("_OutgoingRequests", Model.OutgoingRequests)
                </div>
            </div>
        </div>
    </div>
</div>