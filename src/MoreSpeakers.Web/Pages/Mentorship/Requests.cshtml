@page
@model MoreSpeakers.Web.Pages.Mentorship.RequestsModel
@{
    ViewData["Title"] = "Mentorship Requests";
}

<!-- Hidden form to supply anti-forgery token for HTMX requests -->
<form id="htmx-af" method="post" style="display:none">
    @Html.AntiForgeryToken()
</form>

<div class="container">
    <!-- OOB toast target -->
    <div id="toast-zone"></div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Mentorship Requests</h2>
            <p class="text-muted mb-0">Manage your incoming and outgoing mentorship requests</p>
        </div>
        <a asp-page="/Mentorship/Browse" class="btn btn-primary">
            <i class="bi bi-search me-2"></i>Find Mentors
        </a>
    </div>

    <div class="row">
        <!-- Incoming Requests -->
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-inbox me-2"></i>Incoming Requests
                        @if (Model.IncomingRequests.Any())
                        {
                            <span class="badge bg-warning ms-2">@Model.IncomingRequests.Count</span>
                        }
                    </h5>
                </div>
                <div class="card-body">
                    <div id="incoming-requests"
                         hx-get="/Mentorship/Requests?handler=PollIncoming"
                         hx-trigger="revealed, mentorship:updated from:body"
                         hx-swap="innerHTML">
                        @await Html.PartialAsync("_IncomingRequests", Model.IncomingRequests)
                    </div>
                </div>
            </div>
        </div>

        <!-- Outgoing Requests -->
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-send me-2"></i>Your Requests
                        @if (Model.OutgoingRequests.Any())
                        {
                            <span class="badge bg-info ms-2">@Model.OutgoingRequests.Count</span>
                        }
                    </h5>
                </div>
                <div class="card-body">
                    <div id="outgoing-requests"
                         hx-get="/Mentorship/Requests?handler=PollOutgoing"
                         hx-trigger="revealed, mentorship:updated from:body"
                         hx-swap="innerHTML">
                        @await Html.PartialAsync("_OutgoingRequests", Model.OutgoingRequests)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>