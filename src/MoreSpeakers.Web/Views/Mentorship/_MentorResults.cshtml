@model BrowseMentorsViewModel

@if (!Model.Mentors.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-search display-1 text-muted"></i>
        <h4 class="mt-3">No mentors found</h4>
        <p class="text-muted">Try adjusting your filters to find more mentors.</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var mentor in Model.Mentors)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="mentor-card card h-100">
                    <div class="card-body">
                        <!-- Header with Avatar and Basic Info -->
                        <div class="d-flex align-items-center mb-3">
                            <div class="mentor-avatar-container me-3">
                                @if (!string.IsNullOrEmpty(mentor.HeadshotUrl))
                                {
                                    <img src="@mentor.HeadshotUrl" class="mentor-avatar" alt="@mentor.FullName">
                                }
                                else
                                {
                                    <div class="mentor-avatar mentor-avatar-placeholder">
                                        <i class="bi bi-person-fill"></i>
                                    </div>
                                }
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="card-title mb-1">@mentor.FullName</h6>
                                <div class="d-flex align-items-center gap-2">
                                    @if (mentor.IsAvailableForMentoring)
                                    {
                                        <span class="badge status-available">
                                            <i class="bi bi-check-circle me-1"></i>Available
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge status-busy">
                                            <i class="bi bi-clock me-1"></i>Busy
                                        </span>
                                    }
                                    <span class="badge bg-primary">@mentor.SpeakerType.Name</span>
                                </div>
                            </div>
                        </div>

                        <!-- Bio Preview -->
                        <p class="card-text small">
                            @(mentor.Bio.Length > 120 ? mentor.Bio.Substring(0, 120) + "..." : mentor.Bio)
                        </p>

                        <!-- Mentorship Focus -->
                        @if (!string.IsNullOrEmpty(mentor.MentorshipFocus))
                        {
                            <div class="mb-3">
                                <strong class="small text-muted">Mentorship Focus:</strong>
                                <p class="small mb-0">@mentor.MentorshipFocus</p>
                            </div>
                        }

                        <!-- Expertise Tags -->
                        <div class="expertise-tags mb-3">
                            @foreach (var userExpertise in mentor.UserExpertise.Take(6))
                            {
                                var isShared = Model.CurrentUser.UserExpertise.Any(ue => ue.ExpertiseId == userExpertise.ExpertiseId);
                                <span class="expertise-tag expertise-tag-sm @(isShared ? "shared" : "")">
                                    @if (isShared)
                                    {
                                        <i class="bi bi-star-fill me-1"></i>
                                    }
                                    @userExpertise.Expertise.Name
                                </span>
                            }
                            @if (mentor.UserExpertise.Count > 6)
                            {
                                <span class="expertise-tag expertise-tag-sm">
                                    +@(mentor.UserExpertise.Count - 6) more
                                </span>
                            }
                        </div>

                        <!-- Stats -->
                        <div class="mentor-stats row text-center small mb-3">
                            <div class="col">
                                <strong class="d-block">@mentor.MentorshipsAsMentor.Count(m => m.IsCompleted)</strong>
                                <span class="text-muted">Completed</span>
                            </div>
                            <div class="col">
                                <strong class="d-block">@mentor.MentorshipsAsMentor.Count(m => m.IsActive)</strong>
                                <span class="text-muted">Active</span>
                            </div>
                            <div class="col">
                                <strong class="d-block">@(mentor.MaxMentees - mentor.MentorshipsAsMentor.Count(m => m.IsActive))</strong>
                                <span class="text-muted">Available</span>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-2">
                            @if (mentor.IsAvailableForMentoring && mentor.MentorshipsAsMentor.Count(m => m.IsActive) < mentor.MaxMentees)
                            {
                                <button class="btn btn-primary"
                                        hx-get="/Mentorship/Browse?handler=RequestModal&mentorId=@mentor.Id&type=@Model.MentorshipType"
                                        hx-target="#modal-container"
                                        hx-swap="innerHTML">
                                    <i class="bi bi-@(Model.MentorshipType == MentorshipType.NewToExperienced ? "chat-dots" : "people") me-2"></i>
                                    @(Model.MentorshipType == MentorshipType.NewToExperienced ? "Request Mentorship" : "Connect as Peer")
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-secondary" disabled>
                                    <i class="bi bi-clock me-2"></i>Currently Unavailable
                                </button>
                            }

                            <a href="/Profile/View?userId=@mentor.Id" class="btn btn-outline-primary btn-sm" target="_blank">
                                <i class="bi bi-person me-2"></i>View Profile
                            </a>
                        </div>

                        <!-- Contact Links -->
                        @if (mentor.SocialMediaLinks.Any())
                        {
                            <div class="social-links mt-3 pt-3 border-top">
                                @foreach (var social in mentor.SocialMediaLinks.Take(3))
                                {
                                    <a href="@social.Url" target="_blank" rel="noopener" class="social-link social-link-sm">
                                        <i class="bi bi-@social.Platform.ToLower()"></i>
                                    </a>
                                }
                                @if (mentor.SocialMediaLinks.Count > 3)
                                {
                                    <span class="small text-muted">+@(mentor.SocialMediaLinks.Count - 3) more</span>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Results Summary -->
    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
        <small class="text-muted">
            Showing @Model.Mentors.Count mentor@(Model.Mentors.Count != 1 ? "s" : "")
            @if (Model.SelectedExpertise.Any())
            {
                <span>with expertise in @string.Join(", ", Model.SelectedExpertise.Take(3))@(Model.SelectedExpertise.Count > 3 ? $" and {Model.SelectedExpertise.Count - 3} more" : "")</span>
            }
        </small>
        
        @if (Model.Mentors.Count >= 20)
        {
            <button class="btn btn-outline-primary btn-sm" 
                    hx-get="/Mentorship/SearchMentors"
                    hx-target="#mentor-results"
                    hx-include="[name='mentorshipType']:checked,[name='expertise']:checked,[name='availability']:checked"
                    hx-vals='{"page": 2}'>
                Load More
            </button>
        }
    </div>
}